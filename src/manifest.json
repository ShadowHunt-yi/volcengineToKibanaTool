{
  "manifest_version": 3,
  "name": "517工具Vue版",
  "version": "2.2.1",
  "description": "火山引擎控制台日志跳转工具，快速从会话详情跳转到后端日志系统 - Vue重构版",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://console.volcengine.com/*",
    "https://pallognew.517la.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://console.volcengine.com/*"],
      "js": ["src/content/content.ts"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/inject.ts", "src/config.js"],
      "matches": ["https://console.volcengine.com/*"]
    }
  ],
  "devtools_page": "src/devtools/devtools.html",
  "action": {
    "default_title": "517工具Vue版"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 